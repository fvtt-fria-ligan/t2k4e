<div class="item item-weapon flexrow" data-item-id="{{id}}">

  <div class="item-name flexrow">
    <img class="item-roll" src="{{img}}" title="{{name}}" width="24" height="24"/>
    <a class="item-roll">{{detailedName}}</a>
  </div>
  <div class="item-detail item-type">{{system.itemType}}</div>
  <div class="item-detail item-rof">{{system.rof}}</div>
  <div class="item-detail item-damage">{{system.damage}}</div>
  <div class="item-detail item-crit">{{system.crit}}</div>
  <div class="item-detail item-armor">{{#if (gte system.armorModifier 1)}}+{{/if}}{{system.armorModifier}}</div>
  <div class="item-detail item-range">{{system.range}}</div>
  <div class="item-detail item-mag">{{system.mag.max}}</div>
  <div class="item-detail item-reliability" title="{{system.reliability.value}}/{{system.reliability.max}}">{{system.reliability.value}}</div>
  <div class="item-detail item-blast">{{system.blast}}</div>

  <div class="item-controls">
    {{> "systems/t2k4e/templates/actor/parts/slots/slot-buttons.hbs"}}
  </div>

</div>
