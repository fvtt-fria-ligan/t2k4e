<div class="flexrow">

  {{!-- ARMOR --}}
  <div class="armor">
    <h3>{{localize "T2K4E.VehicleSheet.Armor"}}</h3>
    <div class="grid grid-3col">
      {{!-- Front --}}
      <label class="armor-location">{{localize "T2K4E.VehicleSheet.FrontArmor"}}</label>
      <div class="armor-values flexrow">
        <input type="number" class="boxed-value" name="system.armor.front.value" value="{{system.armor.front.value}}" data-dtype="Number"/>
        <span class="sep">/</span>
        <input type="number" class="boxed-value" name="system.armor.front.max" value="{{system.armor.front.max}}" data-dtype="Number"/>
      </div>
      <progress class="armor-gauge" value="{{system.armor.front.value}}" max="{{system.armor.front.max}}"></progress>
      {{!-- Side --}}
      {{!-- <label class="armor-location">{{localize "T2K4E.VehicleSheet.SideArmor"}}</label>
