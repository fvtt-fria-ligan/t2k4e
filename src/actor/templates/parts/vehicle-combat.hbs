        <span class="sep">/</span>
        <input type="number" class="boxed-value" name="system.armor.left.max" value="{{system.armor.left.max}}" data-dtype="Number"/>
      </div>
      <progress class="armor-gauge" value="{{system.armor.left.value}}" max="{{system.armor.left.max}}"></progress>
      {{!-- Right --}}
      <label class="armor-location">{{localize "T2K4E.VehicleSheet.SideRightArmor"}}</label>
      <div class="armor-values flexrow">
