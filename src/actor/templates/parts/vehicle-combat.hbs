        <input type="number" class="boxed-value" name="system.armor.rear.max" value="{{system.armor.rear.max}}" data-dtype="Number"/>
      </div>
      <progress class="armor-gauge" value="{{system.armor.rear.value}}" max="{{system.armor.rear.max}}"></progress>
    </div>
  </div>

  {{!-- DAMAGE --}}
  <div class="damage">
    <h3>{{localize "T2K4E.VehicleSheet.Damage"}}</h3>
    <textarea name="system.tempDamage" rows="4">{{system.tempDamage}}</textarea>
  </div>

</div>

<div class="inventory">

  {{!-- Primary Mounted Weapons --}}
