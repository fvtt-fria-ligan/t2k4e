<div>
  <div class="flexrow flex-middle">
    <div class="avatar">
      <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    </div>
    <div class="flexrow flex-bottom flex-around flex-grow">
      <div class="flexcol">
        <div class="name">
          <h3>{{localize "FLPS.PARTY.NAME"}}</h3>
          <input name="name" type="text" value="{{actor.name}}" />
        </div>
      </div>
    </div>
  </div>
  <div class="party-member-list">
    <h2>{{localize "FLPS.PARTY.MEMBERS"}}</h2>
    <div class="tab-hint">{{localize "FLPS.PARTY.HINT_ADD"}}</div>
    <div class="members-list">
      <ol>
        {{#each partyMembers as | partyMember |}}
        <!-- prettier-ignore -->
        {{! prettier-ignore }}
{{> systems/t2k4e/templates/actor/party/components/member-component.hbs partyMember=partyMember deleteButton=true}}
        {{/each}}
      </ol>
    </div>
  </div>
</div>
