<div class="t2k4e chat-card weapon" data-item-id="{{id}}" data-owner-id="{{owner}}" data-actor-id="{{actorId}}"{{#if tokenId}} data-token-id="{{tokenId}}"{{/if}}>
  <div class="card-content">

    <div class="card-name">
      <h2>{{name}}</h2>
    </div>

    <div class="card-image">
      <img src="{{img}}" alt="{{name}}"/>
    </div>

    <div class="card-description">
      {{{system.description}}}
      {{!-- <h4>{{localize "T2K4E.ItemSheet.FeaturesTab"}}</h4> --}}
      <div class="grid grid-3col">
        {{#if system.rof}}
        <div><b>{{localize "T2K4E.ItemSheet.RoF"}}:</b> <code>{{system.rof}}</code></div>
        {{/if}}
        <div><b>{{localize "T2K4E.ItemSheet.Damage"}}:</b> <code>{{system.damage}}</code></div>
        <div><b>{{localize "T2K4E.ItemSheet.Crit"}}:</b> <code>{{system.crit}}</code></div>
        <div><b>{{localize "T2K4E.ItemSheet.Armor"}}:</b> <code>{{#if (gte system.armorModifier 1)}}+{{/if}}{{system.armorModifier}}</code></div>
        {{#if system.range}}
        <div><b>{{localize "T2K4E.ItemSheet.Range"}}:</b> <code>{{system.range}}</code></div>
        {{/if}}
        {{#unless (eq system.blast "â€“")}}
        <div><b>{{localize "T2K4E.ItemSheet.Blast"}}:</b> <code>{{system.blast}}</code></div>
        {{/unless}}
      </div>
    </div>

    <div class="card-buttons">
      {{#unless system.isMounted}}
      <button class="weapon-attack" data-action="attack">{{{@root.config.Icons.buttons.attack}}} {{localize "T2K4E.Chat.Actions.Attack"}}</button>
      {{!-- {{#if system.mag.max}}
      <button class="weapon-reload"{{#if (eq system.mag.value system.mag.max)}} data-action="reload" disabled{{/if}}>{{{@root.config.Icons.buttons.reload}}} {{localize "T2K4E.Chat.Actions.Reload"}}</button>
      {{/if}} --}}
      {{/unless}}
    </div>

  </div>
</div>
